@model IEnumerable<Produktkatalog.Models.Produkt>

@{
    ViewBag.Title = "Produktkatalog";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Lägg Till Produkt", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Namn", "Index", new { sortOrder = ViewBag.NamnSortParm })
        </th>
        <th>
            @Html.ActionLink("Pris", "Index", new { sortOrder = ViewBag.PrisSortParm }) (SEK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beskrivning)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Namn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pris) kr
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beskrivning)
        </td>
        <td>
            @Html.ActionLink("Redigera", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Produktdetaljer", "Details", new { id=item.Id }) |
            @Html.ActionLink("Ta bort", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
